<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/coffe" />

    <TextView
        android:id="@+id/list_name"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_icon"
        android:text="TextView" />

    <TextView
        android:id="@+id/list_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/list_desc"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_icon"
        android:layout_alignLeft="@+id/list_name"
        android:layout_alignRight="@+id/list_name"
        android:layout_below="@+id/list_name"
        android:text="TextView" />

</RelativeLayout> 